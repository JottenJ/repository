# hej, den här koden printar alla värden en gång, bra för att kolla om sensorn funkar.
import smbus2
import bme280

bus = smbus2.SMBus(2)       # På BeagleBone är det ofta /dev/i2c-2
address = 0x76              # eller 0x77 beroende på modul
calibration_params = bme280.load_calibration_params(bus, address)

data = bme280.sample(bus, address, calibration_params)
print(f"Temp: {data.temperature:.2f} °C")
print(f"Fukt: {data.humidity:.2f} %")
print(f"Tryck: {data.pressure:.2f} hPa")
